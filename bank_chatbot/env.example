# Application Settings
DEBUG=False

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# PostgreSQL Configuration (Local Docker Container)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chatbot_db
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=chatbot_password_123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# LightRAG Configuration (base URL without /query - the client appends it)
LIGHTRAG_URL=http://localhost:9262/query
LIGHTRAG_API_KEY=MyCustomLightRagKey456
LIGHTRAG_KNOWLEDGE_BASE=default
LIGHTRAG_TIMEOUT=30

# Card Rates Microservice
CARD_RATES_URL=http://localhost:8002

# Chat Settings
MAX_CONVERSATION_HISTORY=10
ENABLE_STREAMING=True

# Lead Generation (disabled by default - set to True to enable)
ENABLE_LEAD_GENERATION=False

# CORS (comma-separated list of origins, or * for all)
CORS_ORIGINS=*

# LDAP/Active Directory Configuration (for Phonebook Sync)
LDAP_SERVER=192.168.5.60
LDAP_BASE_DN=DC=ebl,DC=local
LDAP_BIND_USER=EBL\service_account
LDAP_BIND_PASSWORD=your_ldap_password
LDAP_USE_SSL=False
# LDAP_PORT=389  # Default: 389 for LDAP, 636 for LDAPS

